{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
      "esModuleInterop": true,
      "allowJs": true,
      "sourceMap": true,
      "strict": false,
      "noEmit": true,
      "baseUrl": ".",
      "jsx": "preserve",
      "moduleResolution": "node"
    },
    "transpileOnly": true
  }
}
