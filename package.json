{
  "name": "NR-Editor",
  "private": true,
  "description": "New Recruit Data Editor",
  "author": "New Recruit",
  "version": "1.1.102",
  "main": "main.js",
  "scripts": {
    "build": "nuxt generate --electron",
    "buildelectron": "npm run build && npm exec electron-builder",
    "buildelectron:publish": "npm run build && npm exec electron-builder --publish=always",
    "buildweb": "nuxt build",
    "dev": "nuxi dev --port 3005",
    "start": "nuxi start",
    "generate": "nuxi generate",
    "preview": "electron dist",
    "postinstall": "nuxt prepare",
    "electron": "npx nuxi generate --electron && npx electron dist",
    "deploy": "nuxi generate --ghpages && gh-pages -d dist -t true"
  },
  "build": {
    "appId": "nr-editor",
    "productName": "NewRecruit Editor",
    "directories": {
      "output": ".release"
    },
    "win": {
      "icon": "dist/favicon.ico"
    },
    "mac": {
      "icon": "dist/favicon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "category": "Utility",
      "icon": "dist/favicon.icns",
      "target": "AppImage"
    },
    "files": [
      {
        "from": "dist",
        "to": ""
      },
      {
        "from": "public/assets",
        "to": "assets/"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "giloushaker",
        "repo": "nr-editor",
        "releaseType": "release"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^18",
    "electron": "^24.3.1",
    "electron-builder": "^24.4.0",
    "gh-pages": "^5.0.0",
    "nuxt": "^3.5.2",
    "nuxt-electron": "^0.5.0",
    "nuxt-windicss": "^2.6.1",
    "sass": "^1.62.1",
    "vite": "^4.3.8",
    "vite-plugin-commonjs": "^0.7.0",
    "vite-plugin-electron": "^0.11.2",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "dependencies": {
    "@kyvg/vue3-notification": "^2.9.1",
    "@pinia-plugin-persistedstate/nuxt": "^1.1.1",
    "@pinia/nuxt": "^0.4.10",
    "adm-zip": "^0.5.10",
    "chokidar": "^3.5.3",
    "click-outside-vue3": "^4.0.1",
    "dexie": "^3.2.3",
    "electron-updater": "^6.1.1",
    "fast-xml-parser": "^4.2.2",
    "glob-promise": "^6.0.5",
    "jszip": "^3.10.1",
    "mongodb": "^4.16.0",
    "pinia": "^2.0.36",
    "simple-git": "^3.20.0",
    "unzipit": "^1.4.3"
  },
  "prettier": {
    "printWidth": 120,
    "htmlWhitespaceSensitivity": "strict"
  }
}
